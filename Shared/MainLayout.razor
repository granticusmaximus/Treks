@inherits LayoutComponentBase
@using Treks.Pages

@inject IWebHostEnvironment Env

<PageTitle>Treks</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>

        <article class="content px-4">
            <Toast />
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="alert alert-danger mt-3" role="alert">
                        Something went wrong while processing this page.
                        @if (Env.IsDevelopment())
                        {
                            <pre class="mt-2">@context.ToString()</pre>
                        }
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>
